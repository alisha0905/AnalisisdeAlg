def evaluar_polinomio_potencias_impares(grado, x):
    return sum(x ** i for i in range(1, grado + 1, 2))  
matricula = "240813"
grado = len(matricula)  
cedula = "40213282813"
x = sum(int(digit) for digit in cedula)
resultado = evaluar_polinomio_potencias_impares(grado, x)
print(f"El valor del polinomio con potencias impares cuando x = {x} es: {resultado}")
